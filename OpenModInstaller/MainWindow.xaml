<fw:AcrylicWindow x:Class="OpenModInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenModInstaller"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Title="OpenInstaller" Height="500" Width="500" 
        MinWidth="500" MinHeight="500" fw:AcrylicWindow.Enabled="True" fw:AcrylicWindow.NoiseOpacity="0" fw:AcrylicPanel.NoiseOpacity="0" WindowStyle="None"
                  fw:AcrylicWindow.AcrylicAccentState="AcrylicBlurBehind"
                  fw:AcrylicWindow.AllowsTransparency="True" BorderThickness="0" >
    <Grid x:Name="GridMain" Background="{DynamicResource DynamicResource SystemBaseLowColorBrush}">
        <ScrollViewer x:Name="scrollviewer" ClipToBounds="True" VerticalScrollBarVisibility="Hidden">
            <Frame x:Name="ContentFrame" Source="HomeScreen.xaml" NavigationUIVisibility="Hidden" ScrollViewer.CanContentScroll="True" >
            </Frame>
        </ScrollViewer>
    </Grid>
</fw:AcrylicWindow>
